<h1> 
	<%= "Restaurant:"%>
</h1>
<table class="table table-hover">
  <thead>
    <tr class="active">
      <th>Name</th>
      <th>Description</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Rate Restaurant</th>
      <th>Average Rate</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>   
      <tr>
        <td><%= link_to @restaurant.Name.to_s, url_with_protocol(@restaurant.Link) %></td>
        <td><%= @restaurant.Description %></td>
        <td><%= @restaurant.Address %></td>
        <td><%= @restaurant.Latitude %></td>
        <td><%= @restaurant.Longitude %></td>
        <td><% (1..10).each do |i| %>
              <%= radio_button_tag @restaurant.RestaurantID,i %>
            <% end %></td>
            <!-- tu byÅ‚o restaurants_avg_rates -->
        <td><%= get_restaurant_avg_rate(@restaurant.RestaurantID) %></td>
        <td><%=link_to @restaurant.Link.to_s, @restaurant.Link %></td> 
      </tr>
    
  </tbody>
</table>
